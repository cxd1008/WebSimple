@model Model.News

@{
    ViewBag.Title = "Edit";
}
<script src="@Url.Content("~/Scripts/CkeditorAndCkfinder/ckeditor/ckeditor.js")" type="text/javascript"></script>
<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>News</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.NewsID)

        <div class="form-group">
            @Html.LabelFor(model => model.NewsColumnID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("NewsColumnID","请选择新闻栏目")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NewsTitle, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NewsTitle)
                @Html.ValidationMessageFor(model => model.NewsTitle)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NewsContent, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextArea("NewsContent", Model.NewsContent, new { @class = "ckeditor" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NewsAuthor, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NewsAuthor)
                @Html.ValidationMessageFor(model => model.NewsAuthor)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OrderByNum, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OrderByNum)
                @Html.ValidationMessageFor(model => model.OrderByNum)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CreateTime, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CreateTime)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CreateBy, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CreateBy)
                @Html.ValidationMessageFor(model => model.CreateBy)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@*ckfinder配置目录 replace(ckeditid) 请记住加载CKfinder.DLL*@
<script>
    CKEDITOR.replace('NewsContent',
        {
            filebrowserBrowseUrl: '/Scripts/CkeditorAndCkfinder/ckfinder/ckfinder.html',
            filebrowserImageUploadUrl: '/Scripts/CkeditorAndCkfinder/ckfinder/ckfinder.html'
        });
</script>

