@using Webdiyer.WebControls.Mvc
@model PagedList<Model.News>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NewsColumn.ColumnName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NewsTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NewsContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NewsAuthor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderByNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateBy)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NewsColumn.ColumnName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NewsTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NewsContent2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NewsAuthor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderByNum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateBy)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.NewsID }) |
            @Html.ActionLink("Details", "Details", new { id=item.NewsID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.NewsID })
        </td>
    </tr>
}
</table>

<table>
    <tr>
        <td width="200px">
            第 @Model.CurrentPageIndex / @Model.TotalPageCount 页 共 @Model.TotalItemCount 条记录
        </td>
        <td>
            @Html.Pager(Model).Options(o => o.SetPageIndexParameterName("id").SetPagerItemTemplate("&nbsp;{0}").SetNumericPagerItemCount(5))
        </td>
        <td>
            @using (Html.BeginForm("Index", "News", FormMethod.Post))
            {
                @Html.TextBox("id", "", new { @style = "width:50px;color:red;" })
                <input type="submit" value="go" />
            }
        </td>
    </tr>
</table>

